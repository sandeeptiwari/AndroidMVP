<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameWrapper"
        style="@style/editTextWrapper"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/login_github_username"
            style="@style/customEditText"
            android:hint="@string/user_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        style="@style/editTextWrapper"
        android:layout_below="@id/usernameWrapper"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/login_fake_password"
            style="@style/customEditText"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_submit_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordWrapper"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/primary_round"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/progressBar_splash"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:indeterminateDrawable="@drawable/custom_progress_background"
        android:visibility="gone"/>


</RelativeLayout>
